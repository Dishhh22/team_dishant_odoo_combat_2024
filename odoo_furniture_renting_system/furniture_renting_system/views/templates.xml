<odoo>
    <template id="appliances_and_furniture_for_rent_template" name="Appliances &amp; Furniture for Rent">
        <t t-call="website.layout">
            <div class="container">
                <nav class="breadcrumbs-container mt-3" aria-label="Breadcrumbs">
                    <a href="/">Home</a>
                    <span class="breadcrumbs-delimiter" aria-hidden="true">
                        <svg style="display: inline !important;" aria-hidden="true" focusable="false"
                             role="presentation" xmlns="http://www.w3.org/2000/svg" width="5" height="8"
                             viewBox="0 0 8 8">
                            <path fill="currentColor" d="M2 0L0.6 1.4 4.2 5 0.6 8.6 2 10l6-6-6-6z"/>
                        </svg>
                        Appliances &amp; Furniture for Rent
                    </span>
                </nav>

                <h1 class="text-center mt-4">
                    <strong>
                        <span style="color: #464646;">Appliances &amp; Furniture for Rent</span>
                    </strong>
                </h1>

                <div class="row mt-4">
                    <t t-foreach="categories" t-as="category">
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <a t-att-href="category.get('url')">
                                    <img t-att-src="category.get('image_url')" class="card-img-top"
                                         t-att-alt="category.get('name')"/>
                                </a>
                                <div class="card-body">
                                    <h4 class="card-title text-center">
                                        <a t-att-href="category.get('url')" t-esc="category.get('name')"/>
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>

